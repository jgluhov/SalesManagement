/* Sticky footer styles
-------------------------------------------------- */
html
  position relative
  min-height 100%
body
  /* Margin bottom by footer height */
  margin-bottom 60px

.footer
  position: absolute
  bottom 0
  width 100%
  /* Set the fixed height of the footer here */
  height 60px
  background-color #f5f5f5

.container
  .text-muted
    margin 20px 0

.footer
  > .container
    padding-right 15px
    padding-left 15px

.tm-cart
  border 1px solid #ddd
  padding 10px
  .tm-badge
    margin-left 5px
  .tm-icon
    margin-right 5px