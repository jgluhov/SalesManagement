nav.navbar.navbar-default
	.container-fluid
		.navbar-header
			button.navbar-toggle.collapsed(type="button", data-toggle="collapse",
			data-target="#navbar-collapse", aria-expanded="false")
				span.sr-only toggle
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href="/") SalesManagement
		.collapse.navbar-collapse#navbar-collapse
			p.navbar-text(data-ng-show="username" ng-bind="'Signed in as ' + username")
			.nav.navbar-nav.navbar-right
				li: button.btn.btn-link.navbar-btn(ng-click="login()" ng-show="!username") Login
				li: button.btn.btn-link.navbar-btn(ng-click="signup()" ng-show="!username") Signup
				li: button.btn.btn-link.navbar-btn(ng-click="logout()", ng-bind="'Logout'", ng-show='username')
				li: a(href="/admin" ng-show="admin == true", ng-bind="'Dashboard'") Dashboard